.filter
    $this = selector()
    padding 40px 0

    &__toggle
        +rmin($screens["medium"])
            display none

    &__form
        +rmax($screens["medium"] - 1px)
            position fixed
            z-index 1
            top 0
            bottom 0
            left 0
            right 0
            transform translateX(-100%)
            transition transform 0.6s cubic-bezier(0.92, 0, 0, 0.9)

            {$this}_open &
                transform translateX(0%)
                display block

        +rmin($screens["medium"])
            position relative
            z-index 1
            transition none

    +rmin($screens["medium"])
        padding-bottom: 100px



