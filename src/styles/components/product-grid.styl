.product-grid
    margin-left: - $grid-settings["gutter"]
    margin-right: - $grid-settings["gutter"]
    font-size: 0

    &__cell
        margin-bottom 34px
        display: inline-block
        vertical-align: top
        box-sizing: border-box
        width 100%
        max-width 100%
        padding-left: $grid-settings["gutter"]
        padding-right: $grid-settings["gutter"]
        font-size: 1rem

        +rmin($screens["medium"])
            margin-bottom 54px

            &:nth-child(2n+1)
                margin-right: 10%;

            &:nth-child(4n+1)
            &:nth-child(4n+4)
                width: 40%

            &:nth-child(4n+2)
            &:nth-child(4n+3)
                width 50%

        +rmin($screens["large"])
            margin-bottom 94px

            &:nth-child(4n+1)
            &:nth-child(4n+8)
                width: 30%

            &:nth-child(4n+2)
            &:nth-child(4n+7)
                width: 60%

            &:nth-child(4n+3)
            &:nth-child(4n+6)
                width: 50%

            &:nth-child(4n+4)
            &:nth-child(4n+5)
                width: 40%
