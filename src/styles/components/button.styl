.btn
    $this = selector()
    display inline-block
    box-sizing border-box
    height 40px
    line-height 38px
    padding 0 30px
    border: 1px solid $colors["brand"];
    text-align center
    font-family $font-beta
    font-weight 300
    letter-spacing 0.1em
    text-transform uppercase
    text-decoration none
    background 0
    border-radius 0
    transition .2s
    cursor pointer

    &__icon
        display inline-block
        color: $colors["brand"];

    &__text + &__icon
        margin-left 23px

    &:hover
        color #fff
        background: $colors["brand"]

        {$this}__icon
            color inherit

    &_size_lg
        height 50px
        line-height 48px

    &_width_full
        width 100%
