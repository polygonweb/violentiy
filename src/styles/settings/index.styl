$grid-settings = {
    max-width: 1140px,
    // max-width: 1370px,
    gutter: 15px,
    columns: 12
};

$screens = {
    medium: 768px,
    large: 1280px
};

$font = {
    size: 14px,
    family: {
        alpha: "Open Sans",
        alpha-fallback: sans-serif,
        beta: "Open Sans Condensed",
        beta-fallback: sans-serif,
        gamma: "Prata",
        gamma-fallback: serif,
    }
};

$font-alpha = $font["family"]["alpha"], $font["family"]["alpha-fallback"]
$font-beta = $font["family"]["beta"], $font["family"]["beta-fallback"]
$font-gamma = $font["family"]["gamma"], $font["family"]["gamma-fallback"]

$colors = {
    text: #000,
    brand: #c49a6c,
    text-brand: #c48f55,
    text-light: #a3a3a3,
    light: #f5f5f5
};

$add-gutter = $grid-settings["gutter"] + 23px
