.fieldset
    $this = selector()
    margin 0
    padding 0
    border 0
    overflow hidden

    &__head
        float left
        box-sizing border-box
        width 100%
        padding 16px $add-gutter
        border-top: 1px solid $colors["light"]
        transition .2s
        cursor pointer

        &:hover
            // background: $colors["light"]
            color: $colors["brand"]

    &__title
        display flex
        align-items center
        font-family $font-beta
        font-weight 300
        text-transform uppercase
        // letter-spacing 0.075em
        letter-spacing 0.01em

        &::after
            content ""
            margin-left 10px
            transform rotate(45deg)
            margin-top -4px
            display inline-block
            width  4px
            height 4px
            border-style solid
            border-width 0 1px 1px 0
            color $colors["brand"]

    &__icon
        display none

    &__foot
        display: none;
        padding: 20px $add-gutter;
        background: $colors["light"];
        text-align: center;

    &__body
        clear both
        overflow hidden
        padding 0 $add-gutter
        height 0
        background #fff
        transition height .3s

    &__list
        margin-bottom 10px
        max-height 8*30px
        overflow auto
        $style-scroll()

    +rmax($screens["medium"] - 1px)
        &_open &__body
            height auto

    +rmin($screens["medium"])
        $inner-pad = 20px
        position relative
        float left
        overflow visible

        &__head
            border-top 0
            padding-left 0

        &__icon
            margin-right 8px
            display inline-block
            color: $colors["brand"];

        &__foot
            display block
            margin-top $inner-pad
            margin-left  - $inner-pad
            margin-right - $inner-pad

        &__body
            position absolute
            top 100%
            left 0
            opacity 0
            visibility hidden
            box-sizing border-box
            padding-top  24px
            padding-left  $inner-pad
            padding-right $inner-pad
            min-width 100%
            width 264px
            height auto
            box-shadow 0 5px 20px rgba(0, 0, 0, 0.1)
            transition .3s

        &:first-of-type
            float right

            {$this}__head
                padding-right 0

            {$this}__body
                left auto
                right 0

        :not(.ctx-not-touch) &:hover &__body
            opacity 1
            visibility visible
