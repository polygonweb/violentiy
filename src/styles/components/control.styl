.control
    $this = selector()
    position relative
    display inline-block
    display inline-flex

    &__input
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        opacity 0
        cursor pointer

    &__icon
        position relative
        flex 0 0 auto
        display inline-block
        box-sizing border-box
        width  15px
        height 15px
        background: $colors["light"]
        transition background 0.2s

        &::before
            content ""
            opacity 0
            color #fff
            border 1px solid

    &__content
        color: $colors["text-light"]
        transition color 0.2s

    &__icon + &__content
        margin-left 12px

    &:hover &__content,
    &__input:checked ~ &__content
        color $colors["text"]

    // &:hover &__icon
    //     background: $colors["text-light"]

    &__input:checked + &__icon
        background: $colors["brand"]

        &::before
            opacity 1

    &_type_radio
        {$this}__icon
            border 4px solid transparent
            border-radius 50%

            &::before
                display block
                box-sizing border-box
                width 100%
                height 100%
                border-radius 50%
                background: $colors["brand"]

    &_type_checkbox
        {$this}__icon
            &::before
                position absolute
                left 6px
                bottom 5px
                transform rotate(45deg) skew(9deg)
                border-top 0
                border-left 0
                width 3px
                height 7px

    &_width_full
        width 100%
